<!-- views/forgot-password.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>

  <div class="loggin-msg">
    <% if (success) { %>
      <div><%= success %></div>
    <% } %>
    
    <% if (error) { %>
      <div style="color: red; font-weight: bold; margin-bottom: 10px;"><%= error %></div>
    <% } %>
  </div>

  <div class="login-wrapper">
    <div class="login-box">
  <h2>Forgot Password</h2>

  <% if (step === 1) { %>
    <form action="/send-otp" method="POST">
      <label class="forgot-password-label" >Enter your email:</label>
      <input type="email" name="email" required>
      <button type="submit" class="verify-otp">Send OTP</button>
    </form>
  <% } else if (step === 2) { %>
    <form action="/verify-otp" method="POST">
      <label class="forgot-password-label">Enter OTP:</label>
      <input type="text" name="otp" required>
      <button type="submit" class="verify-otp">Verify OTP</button>
    </form>
  <% } %>

  <div></div>
  <br><a href="/login" class="bck-to-login"> ‚Üê Back to Login</a>
</div>
</div>
</body>
</html>
